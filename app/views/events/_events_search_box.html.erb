<div class="card bg-dark text-white">
  <div class="card-body">
    <%= search_form_for q, :url => {:action => action } do |f|%>
    <div class='form-row'>
      <div class='col'>
        <div class='row'>
          <div class='col-md-3 mt-1'>
            <strong class='mt-1 text-danger'>From</strong>
          </div>
          <div class='col-md-9'>
            <%= f.date_field :date_gteq, class: "form-control", :datepicker => true %>
          </div>
        </div>
      </div>
      <div class='col'>
        <div class='row'>
          <div class='col-md-3 mt-1 text-danger'>
            <strong =>To</strong>
          </div>
          <div class='col-md-9'>
            <%= f.date_field :date_lteq, class: "form-control", :datepicker => true %>
          </div>
        </div>
      </div>
      <div class='col'>
        <div class="form-group ml-1">
          <%= f.select :event_type_eq, Event::EVENT_TYPES, {include_blank: "Select Event Type"}, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class='form-row'>
      <div class='col'>
        <div class="form-group ml-1">
          <%= f.select :class_type_eq, Event::CLASS_TYPES, {include_blank: "Select Class Type"}, class: "form-control" %>
        </div>
      </div>
      <div class='col'>
        <div class="form-group ml-1">
          <%= f.select :status_eq, Event::STATUSES, {include_blank: "Select Status"}, class: "form-control" %>
        </div>
      </div>
      <div class='col'>
        <div class="form-group">
          <%= f.select :location_eq, Event::LOCATION, {include_blank: "Select Location"}, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group ml-4">
      <%= f.submit "Find Events", class: "btn btn-danger" %>
    </div>
    <% end %>
  </div>
</div>

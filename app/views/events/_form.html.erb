<div class="card">
	<div class="card-body">

<%= simple_form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.datetime_select :date, id: :event_date %>
  </div>
  
	<div class="form-group">
		<%= f.label :status %>	
		<%= f.select :status, Event::STATUSES, {include_blank: "Select Status"}, id: :event_status, class: "form-control"%>	
	</div>
	
	
  
  <div class="form-check">
	 <%= f.label :vehicles %>
	  <% @vehicle_categories.each do |vehicle_category| %>
	  	<%= f.association :vehicles, label: vehicle_category.name, collection: vehicle_category.vehicles , :include_blank => false, label_method: :car_id, as: :check_boxes, class: "form-control"%>
		<% end %>

  <div class="form-group">
    <%= f.label :event_mileage %>
    <%= f.text_field :event_mileage, id: :event_event_mileage, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location_id %>
    <%= f.select :location_id, @location.collect { |l| [l.locale, l.id]}, {include_blank: "Select Location"}, id: :event_location_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :duration %>
    <%= f.number_field :duration, id: :event_duration, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_type %>
    <%= f.select :event_type, Event::EVENT_TYPES, {include_blank: "Select Event Type"}, id: :event_event_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :class_type %>
    <%= f.select :class_type, Event::CLASS_TYPES, {include_blank: "Select Class Type"}, id: :event_class_type, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>

</div>
</div>

	

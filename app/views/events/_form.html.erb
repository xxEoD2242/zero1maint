<div class="card bg-dark text-white">
	<div class="card-body form-group">

<%= simple_form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if Event.last %>
    <div class="form-group">
      <h4>
        Event Number: <%= Event.all.last.id + 1%>
	    </h4>
      <div class="form-group form-check">
        	<%= f.check_box :multi_day, id: :event_multi_day, class: "form-check-input" %>
          <%= f.label "Multi Day", class: "form-check-label"%>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <strong class="mr-1"> Scheduled Start Date </strong>
        <%= f.date_field :date, id: :event_date, class: "form-control", datepicker: true %>
      </div>

      <div class="form-group">
        <strong class="mr-3"> Scheduled End Date </strong>
        <%= f.date_field :end_date, id: :event_end_date, class: "form-control", datepicker: true %>
      </div>
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-6">
    </div>
  </div>
  
  <div class="form-group">
	<strong class="mr-4"> Select Time </strong>
	  <%= f.time_select :event_time, id: :event_time, class: "form-control"%>
  </div>
  
	<div class="form-group">
		
		<%= f.select :status, Event::STATUSES, {include_blank: "Select Status"}, id: :event_status, class: "form-control"%>	
	</div>

	   <div class="form-group">
	     <strong><%=f.label "Number of Customers"%></strong>
	     <%= f.number_field :customers, id: :customers, class: "form-control" %>
	   </div>
	
	   <div class="form-group">
	     <strong><%=f.label "Number of Shares"%></strong>
	     <%= f.number_field :shares, id: :shares, class: "form-control" %>
	   </div>

  <div class="form-group">
    <strong> <%= f.label "Estimated Mileage" %></strong>
    <%= f.number_field :est_mileage, id: :event_event_mileage, class: "form-control" %>
  </div>

    <%= f.hidden_field :event_mileage, value: 0, id: :event_event_mileage %>
  

  <div class="form-group">
    <strong> <%= f.label :location %></strong>
	 
    <%= f.select :location, Event::LOCATION, {include_blank: "Select Location"}, id: :location, class: "form-control" %>
	
  </div>

  <div class="row">
  	<div class="col-md-6">
    <div class="form-group">
      <strong > <%= f.label :duration %></strong>
      <%= f.number_field :duration, id: :event_duration, class: "form-control" %>
    </div>
  </div>
  <div class="col-md-6">
     <div class="form-group">
       <strong><%=f.label "Increment"%></strong>
       <%= f.select :duration_word, Event::DURATION_WORDS, {include_blank: "Select Time Increment"}, class: "form-control" %>
     </div>
  </div>
  
  </div>
  <div class="row">
  	<div class="col-md-6">
    <div class="form-group">
      <strong> <%= f.label :event_type %></strong>
      <%= f.select :event_type, Event::EVENT_TYPES, {include_blank: "Select Event Type"}, id: :event_event_type, class: "form-control" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <strong> <%= f.label :class_type %></strong>
      <%= f.select :class_type, Event::CLASS_TYPES, {include_blank: "Select Class Type"}, id: :event_class_type, class: "form-control"%>
    </div>
  </div>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-danger btn-lg" %>
  </div>
<% end %>
<hr>
<%= link_to 'Back', dashboard_events_path, class: "btn btn-danger" %>
</div>

</div>

	

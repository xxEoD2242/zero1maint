<div class="card bg-dark text-white">
  <table class="table table-striped table-borderless table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
		    <th scope="col">Status</th>
		    <th scope="col">Scheduled Date</th>
        <th scope="col">Event Type</th>
        <th scope="col">Location</th>
        <th scope="col">Event Mileage</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% event.all.order(date: :desc).each do |event| %>
        <tr>
          <th scope="row"><%= event.id %></th>
		      <td><%= event.status %></td>
		      <td><%= event.date.strftime('%D')%>
          <td><%= event.event_type%></td>
          <td><%= event.location %></td>
          <td><%= event.event_mileage %></td>
          <td>
			      <%= link_to 'Show', event, class: "btn btn-danger btn-sm" %>
            <%= link_to 'Edit', edit_event_path(event), class: "btn btn-sm btn-danger" %>
		        <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %> 
    </tbody> 
  </table>
</div>





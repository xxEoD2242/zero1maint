<div class="jumbotron">
<h1 class="display-3 text-center">Edit Event <%= @event.number%></h1>
<div class="card">
	<div class="card-body form-group">
<%= simple_form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <strong><%= f.label :date %></strong>
    <%= f.datetime_select :date, id: :event_date, class: "form-control" %>
  </div>

	<div class="form-group">
	<strong><%= f.label :status %></strong>	
	<%= f.select :status, Event::STATUSES, {include_blank: "Select Status"}, id: :event_status, class: "form-control"%>	
	</div>
	
	

  <div class="form-group">
    <strong><%= f.label :event_mileage %></strong>
    <%= f.number_field :event_mileage, id: :event_event_mileage, class: "form-control" %>
  </div>

  <div class="form-group">
    <strong><%= f.label :location_id %></strong>
    <%= f.select :location_id, @location.collect { |l| [l.locale, l.id]}, {include_blank: "Select Status"}, id: :event_location_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <strong><%= f.label :duration %></strong>
    <%= f.text_field :duration, id: :event_duration, class: "form-control" %>
  </div>
  
<div class="form-group">
	<ul class="list-group">
	<strong>Vehicles </strong>
	<% @event.vehicles.each do |vehicle|%>
	<li class="list-group-item"><%= vehicle.car_id %></li>
	<% end %>
</ul>
</div>

  <div class="form-group">
   <strong> <%= f.label :event_type %></strong>
    <%= f.select :event_type, Event::EVENT_TYPES, {include_blank: "Select Status"}, id: :event_event_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <strong><%= f.label :class_type %></strong>
    <%= f.select :class_type, Event::CLASS_TYPES, {include_blank: "Select Status"}, id: :event_class_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Update Event", class: "btn btn-success" %>
  </div>
<% end %>


	

<%= link_to 'Show', @event, class: "btn btn-info" %> |
<%= link_to 'Back', dashboard_events_path, class: "btn btn-warning" %>
</div>
</div>
</div>
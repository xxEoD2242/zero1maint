<div class="jumbotron">
	<h2 class="display-4 text-center"> Vehicle Rotation for <%= Time.now.strftime('%D') %></h2>
	<hr style="color: red;">
	<% if @total_miles != nil %>
	<h4 class="text-center"><%= @total_miles%> Miles Estimated for the next 7 days</h4>
		<% end %>
	
</div>

<div class="card mt-3">
	<div class="card-header">
		<h5 class="text-center">Search Vehicles</h5>
	</div>
	<div class="card-body d-flex justify-content-between align-items-center">
		<form class="form-inline">
		<%= search_form_for @q, :url => {:action => :vehicle_rotation } do |f|%>
		<div class="form-group">
		<%= f.select :vehicle_category_id_eq, options_from_collection_for_select(VehicleCategory.all, "id", "name", @q.vehicle_category_id_eq), {include_blank: "Select Vehicle Category"}, class: "form-control" %>
	</div>

		<div class="form-group ml-3">
		<%= f.select :location_id_eq, options_from_collection_for_select(Location.all, "id", "locale", @q.location_id_eq), {include_blank: "Select Location"}, class: "form-control" %>
	</div>

	<div class="form-group ml-3">
		<%= f.submit "Find Vehicles", class: "btn btn-info"%>
	</div>
	<% end %>
	</form>
	<span>
	<%= link_to "Dashboard", dashboard_events_path, class: "btn btn-info"%>
</span>
</div>
</div>

<div class="card card-success bg-success text-white mt-2">
	<div class='card-header'>
		<h2 class="text-center">Use</h2>
	</div>
	<div class="card-body">
		<% if @vehicle_results != nil%>
		<%= render 'vehicle_table', vehicle: @vehicle_results.where(use: true, vehicle_status: "In-Service")%>
		<% end %>
	</div>
</div>

<div class="card card-danger bg-danger text-white mt-2">
	<div class='card-header'>
		<h2 class="text-center">Don't Use</h2>
	</div>
	<div class="card-body">
		<%= render 'vehicle_table', vehicle: @vehicle_results.where(use: false, vehicle_status: "Out-of-Service")%>
	</div>
</div>
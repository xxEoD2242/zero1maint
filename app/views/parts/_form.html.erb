<div class='card'>
	<div class="card-body">

<%= simple_form_for(@part) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :part_id %>
    <%= f.input :description %>
    <%= f.input :brand %>
    <%= f.select :category, Part::CATEGORIES, {include_blank: "Select Mechanical Category"}, class: "form-control my-2" %>
    <%= f.input :cost %>
    <%= f.input :quantity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>

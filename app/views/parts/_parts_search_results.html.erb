<div class="card bg-dark text-white">
  <table class="table table-borderless table-hover">
    <thead>
      <tr>
        <th scope="col">Part</th>
        <th scope="col">Description</th>
        <th scope="col">Location</th>
        <th scope="col">Category</th>
        <th scope="col">Quantity</th>
        <th scope="col">Cost</th>
        <th scope="col">Application</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% part.order(category: :asc).each do |part| %>
      <tr>
        <th scope="row"><%= part.part_numb %></th>
        <td><%= part.description %></td>
        <td><%= part.location %></td>
        <td><%= part.category %></td>
        <td><%= part.quantity %></td>
        <td><%= number_to_currency part.cost %>
          <td><%= part.vehicle_category %></td>
              <td><%= link_to 'Show', part, class: "btn btn-danger btn-sm" %></td>
              <td> <%= link_to 'Edit', edit_part_path(part), class: "btn btn-sm btn-danger" %></td>
              <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm btn-danger"%></td>
            </td>
          </tr>
          <% end %> 
        </tbody> 
      </table>
    </div>

<div class="jumbotron text-center">
	<h1 class="display-3">Parts Dashboard</h1>
</div>

<div class="row">
	<div class="col-md-3">
		<div class="list-group">
			<a class="list-group-item list-group-item-action" href="../parts/new">New Part</a>
				<a class="list-group-item list-group-item-action" href="../parts">All Parts</a>
				<a class="list-group-item list-group-item-action" 					href="../requests/a_service">Part Orders</a>
				<a class="list-group-item list-group-item-action" 					href="../parts/quant_low">Quantity Low</a>
				<a class="list-group-item list-group-item-action" 					href="../parts/quant_none">Quantity None</a>
			</div>
			
	</div>
	<div class="col-md-6">
			<div class="card">
				<div class="card-header text-center">
					<strong>Most Recent Parts</strong>
				</div>
				<div class="card-body">
					<% @parts.all.order(created_at: :desc).limit(5).each do |part|%>
					<div class="card m-2">
						<div class="card-header">
							<h4><%=link_to part.part_id, part_path(id: part.id), class: "badge badge-warning" %></h4></div>
							
				<div class="card-body">
				
				<div class="row">
					
				<div class="col-md-6">
					<ul class="list-group">
					<li class="list-group-item d-flex justify-content-between 						align-items-center">Requested At
						<span class="badge badge-info"><%= part.created_at.strftime('%D')%></span></li>
					<li class="list-group-item d-flex justify-content-between align-items-center">Brand
					<span class="badge badge-info"><%= part.brand%></span></li>
				</div>
				<div class="col-md-6">
					<li class="list-group-item d-flex justify-content-between align-items-center">Quantity on Hand
					<span class="badge badge-info"><%= part.quantity%></span></li>
					<li class="list-group-item d-flex justify-content-between 						align-items-center">Cost
					<span class="badge badge-info"><%= part.cost%></span></li>
				</ul>
				</div>
			</div>
				</div>
			</div>
			<% end %>
				</div>
			</div>
		</div>
	
	
	<div class="col-md-3">
				<ul class="list-group">
					
				<li class="list-group-item d-flex justify-content-between 					align-items-center">Total Parts: <span class="badge badge-dark"><%= 						@parts.count%></span></li>
				<li class="list-group-item d-flex justify-content-between 					align-items-center">Inventory None: <span class="badge 					badge-dark"><%= @parts.where(quant_none: true).count%></span></li>
				<li class="list-group-item d-flex justify-content-between 					align-items-center">Inventory Low: <span><%= link_to @parts.where(quant_low: true).count, quant_low_parts_path, class: "badge badge-dark"%></span></li>
			</ul>
				
		</div>

	
</div>
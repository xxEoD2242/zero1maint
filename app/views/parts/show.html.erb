<div class='jumbotron'>
	
<div class="card">
	<div class="card-header">
</h1>
  <strong>Part:</strong>
  <%= @part.part_numb %>
</h1>
</div>
<div class="card-body">

<p>
  <strong>Description:</strong>
  <%= @part.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @part.brand %>
</p>

<p>
  <strong>Category:</strong>
  <%= @part.category %>
</p>

<p>
  <strong>Cost:</strong>
  <%= @part.cost %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @part.quantity %>
</p>

<p>
	<strong>Work Orders</strong>
	<% if @part.requests != []%>
	<ul style="list-style-type:none;">
	<%= @part.requests.order(created_at: :desc).all.each do |request|%>
  
		<li><%= link_to request.number, request_path(request), class: "badge badge-dark"%></li>
		<% end %></li>
		
	<% end %>
</p>

<p>
	<strong>Application:</strong>
	<%= @part.vehicle_category%>
</p>

<%= link_to 'Edit', edit_part_path(@part), class: "btn btn-warning" %> |
<%= link_to 'Back', dashboard_parts_path, class: "btn btn-info" %>
</div>
</div>
</div>

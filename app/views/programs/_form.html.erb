<div class="card">
	<div class="card-body">

<%= simple_form_for(@program) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :interval %>
	 <%= f.input :threshold, label: "Threshold Required" %>
	 <%= f.input :threshold_numb, label: "Threshold Mileage" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>

</div>
</div>

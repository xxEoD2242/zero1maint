<div class="card bg-dark text-white mt-4">
  <div class="card-header">
    <h3 class="text-center"><%= @program.name %></h3>
  </div>
  <div class="card-body">
    <p>
      <%if @program.threshold %>
      <strong>Threshold Mileage:</strong>
      <%= @program.threshold_numb %> Miles
      <%else%>
      Not Required
      <%end%>
    </p>
    
    <div class="row">
      <%= render 'service_show_column',
      title: "RZR Interval",
      data: @program.rzr_interval %>
      <%= render 'service_show_column',
      title: "Tour Car Interval",
      data: @program.tour_car_interval %>
      <%= render 'service_show_column',
      title: "Fleet Vehicle Interval",
      data: @program.fleet_interval %>
    </div>
    <div class="row">
      <%= render 'service_show_column',
      title: "Training Vehicle Interval",
      data: @program.training_interval %>
      <%= render 'service_show_column',
      title: "Dirt Bike Interval",
      data: @program.db_interval %>
      <%= render 'service_show_column',
      title: "Other Vehicle Type Interval",
      data: @program.other_interval %>
    </div>
    <br />
    <%= link_to 'Edit', edit_program_path(@program), class: "btn btn-danger" %> |
    <%= link_to 'Back', programs_path, class: "btn btn-danger" %>
  </div>
</div>

<div class='jumbotron mt-3'>
	<h1 class='display-3 text-center'>All Monthly Reports</h1>
</div>
	<div class="row mb-3">
		
		<div class="col-md-4">
			<div class="list-group">
				<a class="list-group-item list-group-item-action" href="../reports/rzr_report">Razor Report</a>
				<a class="list-group-item list-group-item-action" href="../reports/work_order_completed_report">Completed Work Orders Report</a>
					
			
				
				</div>
		</div>
		<% @weekly.each do |report|%>
		<div class="col-md-4">
			
			<div class="card mt-1">
				<div class="card-header text-center justify-content-between align-items-center">
					<%= link_to report.id, report_path(id: report.id), class: "badge badge-dark" %> | <%= report.title%> |
					 <%= report.created_at.strftime('%D')%>
				</div>
				<div class="card-body">
					<p><%= report.description %></p>
					<br \>
				<p>Recipents:
					<br \>
					<% report.users.each do |user| %>
					<%= user.name %>
					<% end %></p>
				</div>
			</div>
		</div>
		<% end %>
		<% @weekly_rzr.each do |report|%>
		<div class="col-md-4">
			
			<div class="card mt-1">
				<div class="card-header text-center justify-content-between align-items-center">
					<%= link_to report.id, report_path(id: report.id), class: "badge badge-dark" %> | <%= report.title%> |
					 <%= report.created_at.strftime('%D')%>
				</div>
				<div class="card-body">
					<p><%= report.description %></p>
					<br \>
				<p>Recipents:
					<br \>
					<% report.users.each do |user| %>
					<%= user.name %>
					<% end %></p>
				</div>
			</div>
		</div>
		<% end %>
	</div>
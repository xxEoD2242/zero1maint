<%= render 'report_title_box', title: "Other Vehicles Report for #{Date.current.strftime('%v')}" %>

<%= render 'vehicle_results', vehicles: @vehicles.in_service?, table_title: 'In-Service Vehicles' %>

<%= render 'vehicle_results', vehicles: @vehicles.out_of_service?, table_title: 'Out-of-Service Vehicles' %>

<div class="container d-flex justify-content-between align-items-center">
  <strong>
    <%= link_to "Download PDF", other_vehicles_report_reports_path(params.merge(format: 'pdf').permit!), class: "btn btn-danger"%>
  </strong>
  <form class="form-inline">
    <%= search_form_for @q, :url => {:action => :other_vehicles_report } do |f|%>
			
    <div class="form-group">
      <%= f.select :veh_category_eq, Vehicle::CATEGORIES, {include_blank: "Select Vehicle Category"}, class: "form-control" %>
    </div>
	
    <div class="form-group ml-3">
      <%= f.select :location_eq, Vehicle::LOCATION, {include_blank: "Select Location"}, class: "form-control" %>
    </div>

    <div class="form-group ml-3">
      <%= f.submit "Find Vehicles", class: "btn btn-danger"%>
    </div>
    <% end %>
  </form>
  <%= link_to "Back", generate_report_reports_path, class: "btn btn-danger"%>
</div>

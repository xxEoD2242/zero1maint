
<div >
	<img src="https://s3.us-east-2.amazonaws.com/zero1maintphotos/Work+Order+Pictures/Zero-One-Black-simple.png" width="175" height="70" alt="">
</div>
	
	
	
	
	<h1 style='display: flex;justify-content: center; border: 1px solid black;'>All New & In-Progress Work Orders for<br \> <%= (Time.now - 7.days).strftime('%D')%> - <%=Time.now.strftime('%D')%></h1>

<div>
<table border='1'>
	<caption><b>New Work Orders</b></caption>
	<thead>
		<tr>
			<th>Work Order Number</th>
			<th>Work Order Status</th>
			<th>Work Order Type</th>
			<th>Vehicle</th>
			<th>Defect Description</th>
			<th>Work Order Created At</th>
			<th>Estimated Completion Date</th>
			
		</tr>
	</thead>
	<tbody>
		<% @in_progress.order(tracker_id: :asc).each do |request|%>
	<tr>
		<td><%= request.number%></td>
		<td><%= request.tracker.track %></td>
		<td><%= request.program.name %></td>
		<td><%= request.vehicle.car_id%></td>
		<td><%= request.description %>
		<td><%=request.created_at.strftime('%D')%>
		<td><%= request.completion_date.strftime('%D') %>
		
	</tr>
	<% end %>
	</tbody>
</table>
<div>
	<br \>
	<br \>
<table border='1'>
	<caption><b>In-Progress Work Orders</b></caption>
	<thead>
		<tr>
			<th>Work Order Number</th>
			<th>Work Order Status</th>
			<th>Work Order Type</th>
			<th>Vehicle</th>
			<th>Defect Description</th>

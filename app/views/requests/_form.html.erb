<div class="card">
	

<%= simple_form_for @request, html: {multipart: true} do |f| %>
  <%= f.error_notification %>
<div class="card-body">
	<div class="form-group">
		<strong>Current Status: </strong> <br \>
	  <%= f.select :tracker_id, @tracks.collect { |t| [ t.track, t.id ]}, {include_blank: "Update Status" }, id: :request_tracker_id, class: "form-control" %>
	</div>
	
  <div class="form-group">
    <strong><%= f.label "Work Order Number:" %></strong>
    <%= f.number_field :number, id: :request_number, class: "form-control" %>
  </div>
  
  <div class="form-group">
	  <%= f.select :program_id, @programs.collect {|s| [s.name, s.id]}, {include_blank: "Select Service"}, class: "form-control", id: :request_program_id%>
</div>
  <div class="form-group">
    <strong><%= f.label :description %></strong>
    <%= f.text_area :description, id: :request_description, class: "form-control" %>
  </div>
  
 <div class="form-group d-flex justify-content-bottom">
   <strong>Upload Images for Work Order: </strong>
   <%= f.file_field :image %>
 </div>

	
	<div class="form-group">
		<%= f.select :vehicle_id, @vehicles.collect { |v| [v.car_id, v.id]}, {include_blank: "Select Vehicle"}, id: :request_vehicle_id, class: "form-control" %>
	</div>
	
	
	<%= f.hidden_field :user_id, value: current_user.id%>

  <div class="form-group">
    <strong><%= f.label :special_requets %></strong>
    <%= f.text_area :special_requets, id: :request_special_requets, class: "form-control" %>
  </div>

  <div class="form-group">
    <strong><%= f.label :completion_date %></strong>
    <%= f.date_select :completion_date, id: :request_completion_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <strong><%= f.label "Point of Contact" %></strong>
    <%= f.text_field :poc, id: :request_poc, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Submit Work Order", class: "btn btn-lg btn-success" %>
 </div>
<% end %>
<span class="container d-flex justify-content-end">
<%= link_to 'Back', requests_path, class: "btn btn-info" %></span>

</div>
</div>
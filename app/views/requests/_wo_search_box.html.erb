<div class="card bg-dark text-white">
  <div class="card-header">
    <strong> Search for Work Orders</strong>
  </div>
  <div class="card-body">
    <form>
      <%= search_form_for q, :url => {:action => action } do |f|%>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= f.select :program_id_eq, options_from_collection_for_select(Program.all, "id", "name", @q.program_id_eq), {include_blank: "Select Service Type"}, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group ">
            <%= f.select :status_eq, Request::STATUS, {include_blank: "Select Work Order Status"}, class: "form-control"  %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.select :vehicle_veh_category_eq, Vehicle::CATEGORIES, {include_blank: "Select Vehicle Category"}, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label "From", class: "mr-1"%>
            <%= f.date_field :completion_date_gteq, class: "form-control", datepicker: true  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label "To", class: "mr-1"%>
            <%= f.date_field :completion_date_lteq, class: "form-control", datepicker: true  %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Find Work Orders", class: "btn btn-danger"%>
      </div>
       
      <% end %>
    </form>
  </div>
</div>

<div>
   <h2>Request Number: <%= @request.number %></h2>
</div>	
<div class="card-body">
<div class="row">
	<div class="col-md-6">
<p>
  <strong>Vehicle Name:</strong>
  <%= @request.vehicle.car_id%>
</p>
<!-- This is a comment -->
<p>
  <strong>Submitted By:</strong>
  <%= @request.user.name%>
</p>

<p>
  <strong>Current Vehicle Mileage:</strong>
  <%= @request.vehicle.mileage%>
</p>

<p>
  <strong>Description:</strong>
  <%= @request.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @request.tracker.track %>
</p>
<% if @request.program != nil %>
<p>
	<strong>Service Type:</strong>
	<%= @request.program.name %>
</p>
<% end %>

<p>
  <strong>Special requets:</strong>
  <%= @request.special_requets %>
</p>

<p>
  <strong> Work Order Mileage:</strong>
  <%= @request.request_mileage%>
</p>

<p>
  <strong>Completion date:</strong>
  <%= @request.completion_date %>
</p>
</div>
<div class="col-md-6">


<div class="card">
	<div class="card-header">
	<strong>Parts: </strong>
</div>
<div class="card-body">
<% if @part_order != []%>
		<table border='1'>
			<thead>
			<tr>
			<th scope="col">Item:</th>
				<th scope="col">Qty:</th> 
				<th scope="col">Total Cost:</th>
				
			</tr>
			</thead>
			<tbody>
				<% @part_order.each do |order|%>
				<% if order.order_items != {}%>
  			 <% order.order_items.each do |key, value|%>
				<tr>
			<td><%= Part.find(key).description%></td>
			 <td><%= value %></td>
			 <td><%= value * Part.find(key).cost%></td>
			 
		 </tr>
			  <% end %>
			  <% end %>
			  <% end %>
		  </tbody>
	  </table>
  </div>
	  <% total = []%>
			<% @request.request_part_orders.each do |order| %>
		<% if order.order_total != nil%>
       <% total << order.order_total %>
	  <% end %>
			<% end %>
		<div>
    Request Total Cost:&nbsp<span> <%= number_to_currency total.sum %></span>
 </div>
<% end %>
</div>

</div>
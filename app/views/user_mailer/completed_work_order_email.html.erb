<div>
  <h1 style="text-align: center;">Work Order <%= @request.id %> for <%= @request.vehicle.car_id %></h1>
</div>	

<p>
  This work order has been completed. If you have any questions, please contact <%= @request.creator %>
</p>
	
<p>
  <strong>Vehicle Name:</strong>
  <%= @request.vehicle.car_id %>
</p>

<p>
  <strong>Current Vehicle Mileage:</strong>
  <%= @request.vehicle.mileage %>
</p>

<p>
  <strong>Description:</strong>
  <%= @request.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @request.status %>
</p>
<% if !@request.programs.empty? %>
<p>
  <strong>Service Type:</strong>
  <% @request.programs.each do |program|%>
    <% program.name %>
    <br \>
  <% end %>
</p>
<% else %>
<p>
  <strong>Service Type:</strong>
  <% Program.find(request.program_id).name %>
</p>
<% end %>

<p>
  <strong> Work Order Mileage:</strong>
  <%= @request.request_mileage%>
</p>

<p>
  <strong>Completed date:</strong>
  <span style="color: green;"> <%= @request.completed_date %> </span>
</p>
	
<% if @request.users.exists?%>
<p>
  <strong> Recipents:</strong>
  <ul style="list-style-type: none;">
    <% @request.users.each do |user| %>
    <li><%= user.name %></li>
    <% end %>
  </ul>
</p>
<% end %>

<% if @request.defects.exists?%>
<p>
  <strong> Defects:</strong>
  <ul style="list-style-type: none;">
  <% @request.users.each do |user| %>
  <li><%= defect.description %> | <%= defect.created_at.strftime('%v') %></li>
	  <% end %>
  </ul>
</p>
<% end %>


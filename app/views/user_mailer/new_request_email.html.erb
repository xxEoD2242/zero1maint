
	<div>
	   <h1 style="text-align: center;">Request Number: <%= @request.id %></h1>
	</div>	

	<p>
		You have been assigned to this work order. If you have any questions, please contact <%= @request.creator%>.
	</p>
	
  <% if @request.vehicle_id %>
  <p>
    <strong>Vehicle ID:</strong>
    <%= Vehicle.find(@request.vehicle_id).car_id %>
  </p>

  <% elsif @request.multi_vehicle %>

  <p>
    <strong>Vehicles:</strong>
    <% @request.vehicle.each do |vehicle|%>
      <%= vehicle.car_id %> Mileage: <%= vehicle.mileage %>
      <br />
    <% end %>
  </p>
  <% end %>

	<p>
	  <strong>Submitted By:</strong>
	  <%= @request.creator%>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @request.description %>
	</p>

	<p>
	  <strong>Status:</strong>
	  <%= @request.status %>
	</p>
	<% if !@request.programs.empty? %>
	<p>
		<strong>Service Type:</strong>
    <% @request.programs.each do |program|%>
      <% program.name %>
      <br \>
    <% end %>
	</p>
	<% end %>

	<p>
	  <strong>Completion date:</strong>
	  <%= @request.completion_date %>
	</p>
	
<% if @request.users.exists?%>
<p>
  <strong> Recipents:</strong>
  <ul style="list-style-type: none;">
  <% @request.users.each do |user|%>
  <li><%= user.name%></li>
	  <% end %>
  </ul>
</p>
<% end %>
	

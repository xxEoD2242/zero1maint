<%= render 'user_header', title: "#{@user.name}'s Profile"%>
<%= render 'users_nav_bar', status: 'disabled' %>
<div class="container my-3 bg-dark text-white d-flex justify-content-between align-items-center" style="border: 2px solid red; border-radius: 6px; padding: 10px;">
  <p>
    <strong> Email: </strong>
    <span class="badge badge-danger ml-2">
      <%= @user.email %>
    </span>
  </p>
	
  <p>
    <strong> Employee ID: </strong>	
    <span class="badge badge-danger ml-2">
      <%= @user.emplyid %>
    </span>
  </p>
	
  <% if @user.last_sign_in_at %>
  <p>
    <strong> Last Sign In: </strong>
    <span class="badge badge-danger ml-2">
      <%= @user.last_sign_in_at.strftime('%D') %>
    </span>
  </p>
  <% end %>
</div>

<div class="card bg-dark text-white">
  <div class="card-header">
    <h5 class="text-center">
      Work Orders Assigned
    </h5>
  </div>
  <div class="card-body">
    <% unless @requests.empty? %>
    <div class="row">
      <% @requests.order(completed_date: :desc).each do |request|%>
      <div class="col-md-4 my-3">	
        <%= render "work_order", request: request %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-borderless table-hover">
    <thead>
      <tr>
        <th scope="row">ID</th>
        <th scope="row">Created On</th>
        <th scope="row">Times Reported</th>
        <th scope="row">Event</th>
        <th scope="row">Category</th>
        <th scope="row">Description</th>
        <th scope="row">Status</th>
        <th scope="row">Date Fixed</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% defects.each do |defect|%>
      <tr>
        <th scope='col'>
          <h5>
            <%= link_to "#{defect.id}", defect_path(defect), class: 'badge badge-danger' %>
          </h5>
        </th>
        <th scope="col">
          <h5>
          <span class="badge badge-danger">
            <%= defect.created_at.strftime('%v') %>
          </span>
        </h5>
        </th>
        <td><%= defect.times_reported %></td>
        <td><%= last_event defect %>
        <td><%= category_words defect %></td>
        <td><%= defect.description %></td>
        <td>
          <h5>
            <span class="badge <%= fixed_defect_badge defect %>">
              <%= fixed_defect_word defect %>
            </span>
          </h5>
        </td>
        <td>
          <h5>
          <span class="badge <%= fixed_defect_badge defect %>">
            <%= defect_date defect%>
          </span>
        </h5>
        </td>
        <td>
          <%= defect_checklist defect %>
        </td>
        <td>
          <%= work_order_link defect %>
        </td>
        <td>
          <%= link_to "Show", defect_path(defect), class: 'badge badge-danger' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

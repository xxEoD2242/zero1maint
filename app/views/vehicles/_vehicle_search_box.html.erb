<div class="col-md-7 p-2 bg-secondary border-light border text-white d-flex justify-content-center" style="border-radius: 6px;">
  <form class="form-inline">
    <%= search_form_for q, :url => {:action => action } do |f| %>
    <div class="form-group">
      <%= f.select :veh_category_eq, Vehicle::CATEGORIES, {include_blank: "Select Vehicle Category"}, class: "form-control" %>
    </div>

    <div class="form-group ml-3">
      <%= f.select :location_eq, Vehicle::LOCATION, {include_blank: "Select Location"}, class: "form-control" %>
    </div>

    <div class="form-group ml-3">
      <%= f.submit "Find Vehicles", class: "btn btn-light" %>
    </div>

    <div class='form-group ml-3'>
      <h4>
        <span class='badge badge-light badge-pill text-white'>
          <%= link_to :back, class: 'text-white' %>
        </span>
      </h4>
    </div>
    <% end %>
  </form>
</div>

<div class='jumbotron bg-secondary text-white'>
  <h2 class='display-4 text-center'>
    All Defects for
      <%= link_to @vehicle.car_id, vehicle_path(@vehicle), class: 'badge badge-danger' %>
  </h2>
</div>

<%= render 'vehicle_nav_bar', status: "active", url: vehicle_path(@vehicle) %>

<div class='card bg-dark text-white'>
  <div class='card-body'>
    <%= render 'defects_table', defects: @defects %>
    <br />
    <%= paginate @defects %>
  </div>
</div>

<%= render 'defects_search_box_for_vehicle', q: @q, action: :defects %>

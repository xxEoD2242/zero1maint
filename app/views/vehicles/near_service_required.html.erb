<div class="jumbotron bg-secondary text-white">
  <h1 class="display-3 text-center">Vehicles Within 100 Miles of Service</h1>
  <div class="card bg-dark text-white">
    <div class="card-body">
	
      <%= render 'service_needed_form', vehicle: @vehicle_results %>
      <br />
      <%= render 'results', q: @q, action: :near_service_required %>
      <br />
      <div class="container d-flex justify-content-between align-items-center">
        <%= link_to "Back", :back, class: "btn btn-danger"%>
        <strong>Download:
          <%= link_to "CSV", near_service_required_vehicles_path(params.merge(format: "csv").permit!), class: "btn btn-danger" %> |
          <%= link_to "PDF", near_service_required_vehicles_path(params.merge(format: "pdf").permit!), class: "btn btn-danger" %>
        </strong>
      </div>
    </div>
  </div>
</div>
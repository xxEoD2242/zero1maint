	<div style="display: flex;justify-content: center;">
	<h1 style='text-decoration: underline;'>All Vehicles Near Required Services</h1>
</div>
<table border="1">
  <thead>
    <tr>
      <th scope="col">Car</th>
		<th scope="col">Status</th>
      <th scope="col">Car Category</th>
      <th scope="col">Location</th>
      <th scope="col">Work Orders</th>
      <th scope="col">Mileage</th>
		<th scope="col">Service Needed</th>
    </tr>
  </thead>

  <tbody>
    <% @vehicle_results.order(vehicle_category_id: :asc).each do |vehicle| %>
      <tr>
        <th scope="row"><%= vehicle.car_id %></th>
		  <td><%= vehicle.vehicle_status %></td>
        <td><%= vehicle.vehicle_category.name %></td>
        <td><%= vehicle.location.locale %></td>
        <td><% vehicle.requests.where(tracker_id: 1).each do |request| %>
		  		<%= request.number %>
				<%= request.tracker.track%>
				<% end %></td>
        <td><%= vehicle.mileage %></td>
		  <td>
			<% if vehicle.a_service == true %>
         A-Service
			<% end %>
       <% if vehicle.shock_service == true  %>
         Shock-Service
			 <% end %>
			 <% if vehicle.air_filter_service == true %>
			Air Filter Service
        <% end %>
		  <% if vehicle.repair_needed == true %>
		  Repairs In Progress
		  <% end %>
	 </td>
      </tr>
    <% end %> 
  </tbody> 
</table>

	<h1 style='text-decoration: underline;text-align: center;'>All Vehicles Near Required Services</h1>
</div>
<table>
  <thead>
    <tr>
      <th scope="col">Car</th>
		<th scope="col">Status</th>
      <th scope="col">Car Category</th>
      <th scope="col">Location</th>
      <th scope="col">Work Orders</th>
      <th scope="col">Mileage</th>
		<th scope="col">Near Service Miles To</th>
		<th scope="col">Service Needed</th>
    </tr>
  </thead>

  <tbody>
    <% @vehicle_results.order(veh_category: :asc).each do |vehicle| %>
      <tr>
        <th scope="row"><%= vehicle.car_id %></th>
		  <td><%= vehicle.vehicle_status %></td>
        <td><%= vehicle.veh_category %></td>
        <td><%= vehicle.location %></td>
        <td><% vehicle.requests.where(status: 'New').each do |request| %>
		  		<%= request.number %>
				<%= request.tracker.track%>
				<% end %></td>
        <td><%= vehicle.mileage %></td>
         <td><% if vehicle.near_service %>
 		 	<ul style="list-style-type:none;padding: 0;margin: 0;">
 				<% if vehicle.near_a_service_mileage <= 100 %>
 				<li> A-Service in <br \> <%= vehicle.near_a_service_mileage %> Miles </li> <% end %>
 		     <%  if vehicle.near_shock_service_mileage <= 200 %> 
 			<li>Shock Service in <br \> <%= vehicle.near_shock_service_mileage %> Miles</li>
 			<% end %>
 		      <% if vehicle.near_air_filter_service_mileage <= 50 %>
 				<li>Air Filter Change in <br \><%= vehicle.near_air_filter_service_mileage %> Miles</li><% end %>
 				<% end %>
 			</ul>
 		 </td>
		  <td>
			<% if vehicle.a_service %>
         A-Service
			<% end %>
       <% if vehicle.shock_service  %>
         Shock-Service
			 <% end %>
			 <% if vehicle.air_filter_service %>
			Air Filter Service
        <% end %>
		  <% if vehicle.repair_needed %>
		  Repairs In Progress
		  <% end %>
	 </td>
      </tr>
    <% end %> 
  </tbody> 
</table>
<div class="jumbotron text-center">
<h1 class="display-3">Needs Service:</h1>
	<div class="form-group">
	<%= search_form_for @q, :url => {:action => :needs_service} do |f|%>
	<div class="form-group">
	<%= f.select :vehicle_category_id_eq, options_from_collection_for_select(VehicleCategory.all, "id", "name", @q.vehicle_category_id_eq), include_blank: true, class: "form-control" %>
</div>

<div class="form-group">
	<%= f.submit "Find Vehicles", class: "btn btn-info"%>
</div>
<% end %>
</div>

<%= render 'service_needed_form', vehicle: @vehicle_results %>

<div class="container d-flex justify-content-between align-items-center mt-2">
<%= paginate @vehicle_results%>

<%= link_to 'Back', vehicles_path, class: "btn btn-info " %>
</div>

</div>


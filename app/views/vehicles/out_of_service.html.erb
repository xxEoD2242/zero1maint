<div class="jumbotron">
<h1 class="display-3 text-center">Vehicles Out-of-Service:</h1>
<div class="card">
	<div class="card-body">
	<%= render 'service_needed_form', vehicle: @vehicle_results %>
	<br \>
		<form class="form-inline">
		<%= search_form_for @q, :url => {:action => :out_of_service } do |f|%>
		<div class="form-group">
		<%= f.select :vehicle_category_id_eq, options_from_collection_for_select(VehicleCategory.all, "id", "name", @q.vehicle_category_id_eq), {include_blank: "Select Vehicle Category"}, class: "form-control" %>
	</div>

		<div class="form-group ml-3">
		<%= f.select :location_id_eq, options_from_collection_for_select(Location.all, "id", "locale", @q.location_id_eq), {include_blank: "Select Location"}, class: "form-control" %>
	</div>

	<div class="form-group ml-3">
		<%= f.submit "Find Vehicles", class: "btn btn-info"%>
	</div>
	<% end %>
</form>
	<br \>
 	<div class="container d-flex justify-content-between align-items-center"> 
 	<strong>Download:
 	  <%= link_to "CSV", out_of_service_vehicles_path(params.merge(format: "csv").permit!), class: "btn btn-info" %> &nbsp
 	  <%= link_to "PDF", out_of_service_vehicles_path(params.merge(format: "pdf").permit!), class: "btn btn-info" %> </strong>
	  <%= link_to "Back", vehicles_path, class: "btn btn-primary"%>
   </div>
</div>
	